@using Authentication.Models;
@using LNF;

@model HomeModel
@{
    ViewBag.Title = "LNF Online Services Log In";
    string errmsg = ViewBag.ErrorMessage;
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/login.css")">
}

<div class="login-container">

    <div class="form-login-heading">
        <div class="form-login-heading-background"></div>
        <h2 class="form-login-heading-text">LNF Online Services</h2>
    </div>

    <div class="login-form-wrapper">
        @using (Html.BeginForm("Index", "Home", new { Model.ReturnServer, Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-login" }))
        {
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    @ViewBag.KioskMessage
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UserName, "Username", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <button type="submit" class="enter-button btn btn-primary"></button>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger" role="alert">
                @Html.Raw(errmsg)
            </div>
        }

        @if (!Providers.IsProduction())
        {
            <div class="alert alert-danger" role="alert">
                <strong style="font-size: larger;">THIS THE DEVELOPMENT SITE!</strong><br /><br />
                ANY RESERVATIONS MADE ON THE DEVELOPEMENT SITE ARE NOT VALID.<br /><br />
                IF YOU CAME HERE BY ACCIDENT PLEASE GO <a href="https://ssel-apps.eecs.umich.edu/login">HERE</a> TO LOG IN.
            </div>
        }
    </div>

</div>
